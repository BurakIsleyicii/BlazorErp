@inject Microsoft.Extensions.Localization.IStringLocalizer<RoleModal> localizer
<MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
    <MudDialog>
        <TitleContent>
            @{
                if (Id == null)
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                        @localizer["Add Role"]
                    </MudText>
                }
                else
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Update" Class="mr-3 mb-n1" />
                        @localizer["Update Role"]
                    </MudText>
                }
            }
        </TitleContent>
        <DialogContent>
            <MudTextField For="@(() => Id)" @bind-Value="Id" Label="@localizer["Role ID"]" Disabled />
            <MudTextField For="@(() => Name)" @bind-Value="Name" Required="true" Label="@localizer["Role Name"]" />
        </DialogContent>
        <DialogActions>
            <MudButton Variant="Variant.Filled" OnClick="Cancel">@localizer["Cancel"]</MudButton>
            @{
                if (Id == null)
                {
                    <MudButton Variant="Variant.Filled" OnClick="SaveAsync" Color="Color.Success">@localizer["Save Role"]</MudButton>
                }
                else
                {
                    <MudButton Variant="Variant.Filled" OnClick="SaveAsync" Color="Color.Secondary">@localizer["Update Role"]</MudButton>
                }
            }
        </DialogActions>
    </MudDialog>
</MudForm>